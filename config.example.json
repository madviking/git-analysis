{
  "me_emails": ["you@example.com"],
  "me_names": ["Your Name"],
  "me_email_globs": [],
  "me_name_globs": [],
  "me_github_usernames": ["your-github-username"],
  "include_remote_prefixes": [
    "github.com/madviking",
    "github.com/east-interactive",
    "github.com/eastbg"
  ],
  "remote_name_priority": ["origin", "upstream"],
  "remote_filter_mode": "any",
  "exclude_forks": true,
  "fork_remote_names": ["upstream"],
  "bootstrap_changed_threshold": 50000,
  "bootstrap_files_threshold": 200,
  "bootstrap_addition_ratio": 0.9,
  "exclude_path_prefixes": [
    "vendor/",
    "node_modules/",
    "dist/",
    "build/",
    "target/",
    ".venv/",
    ".idea/",
    ".pytest_cache/",
    "__pycache__/"
  ],
  "exclude_path_globs": [
    "**/vendor/**",
    "**/node_modules/**",
    "**/*.min.js",
    "**/*.min.css"
  ],
  "exclude_dirnames": [
    ".git",
    ".venv",
    "git-analysis",
    "node_modules",
    "vendor",
    "dist",
    "build",
    "target",
    ".idea",
    ".pytest_cache",
    "__pycache__"
  ]
}
